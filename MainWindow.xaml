<Window x:Class="DemoExam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoExam"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="720">
    <Grid x:Name="Grid" Margin="0,0,0,9">
        <ListBox x:Name="Lbox" ItemsSource="{Binding ItemPanelCollection}" Margin="0,36,10,70">

        </ListBox>
        <Grid x:Name="GridPages" Margin="290,510,10,10">
        </Grid>
        <TextBox x:Name="TextSearch" HorizontalAlignment="Left" Margin="10,10,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" TextChanged="TextSearch_TextChanged"/>
        <ComboBox x:Name="CmbFilter" HorizontalAlignment="Left" Margin="165,8,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="CmbFilter_SelectionChanged"/>
        <ComboBox x:Name="CmbSort" HorizontalAlignment="Left" Margin="290,9,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="CmbSort_SelectionChanged"/>

    </Grid>
</Window>
